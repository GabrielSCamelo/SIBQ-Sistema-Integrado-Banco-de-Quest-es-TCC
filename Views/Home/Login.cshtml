@model SIBQ.Models.LoginViewModel

@{
    Layout = null;
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="pt-br" ng-app="SIBQ">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/favicon.ico" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
    </head>
    <body style="background: radial-gradient(circle, rgba(74,143,136,1) 10%, rgba(19,38,60,1) 92%);" ng-controller="LoginController">
        <div class="container">
            <div class="d-flex justify-content-center align-items-center vh-100">
                <div class="col-md-4">
                    <div class="card mt-4 mb-3 mx-auto">
                        <h1 class="card-header text-center">Login</h1>
                        <div class="card-header text-center">
                            <img src="~/css/SIBQ.png" alt="Logo">
                            <div class="card-body">
                                @using (Html.BeginForm("Login", "Login", FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken() <!-- Proteção CSRF -->

                                    <div class="form-group">
                                        <i class="bi bi-person-circle"></i>
                                        <label class="form-label my-4" for="Nickname">Usuário:</label>
                                        @Html.TextBoxFor(m => m.Nickname, new { @class = "form-control form-control-lg rounded-pill shadow bg-light", placeholder = "Insira o usuário", required = "required" })
                                    </div>

                                    <div class="form-group position-relative">
                                        <i class="bi bi-lock-fill"></i>
                                        <label class="form-label my-4" for="Password">Senha:</label>
                                        <div class="input-group">
                                            @Html.PasswordFor(m => m.Password, new { @class = "form-control form-control-lg rounded-pill shadow bg-light", placeholder = "Insira a senha", required = "required", id = "Password" })
                                            <button class="visibility rounded-pill" type="button" ng-click="togglePasswordVisibility()">
                                                <i ng-class="showPassword ? 'bi bi-eye-fill' : 'bi bi-eye-slash-fill'"></i>
                                            </button>
                                        </div>
                                    </div>

                                    <div class="col-auto align-content-center text-center my-3">
                                        <button type="submit" class="col-lg-10 btn btn-secondary">Login</button>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2025 - SIBQ - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>

        <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.8.2/angular.min.js"></script>
        <script src="~/js/Main.js" asp-append-version="true"> </script>
        <script src="~/js/LoginController.js" asp-append-version="true"></script>

        <style>
        .toggle-password {
            position: absolute;
            top: 50%;
            right: 5px;
            transform: translateY(-50%);
            cursor: pointer;
        }

        .visibility {
            position: absolute;
            right: 10px;
            top: 50%;
            transform: translateY(-50%);
            border: none;
            z-index: 10;
        }
        </style>
    </body>
</html>